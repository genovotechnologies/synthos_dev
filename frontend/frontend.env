# ===================================================================
# Synthos Frontend Environment Configuration
# ===================================================================
# Copy this file to .env.local and fill in your actual values
# Note: Only variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# ===================================================================
# ===================================================================
# APPLICATION CONFIGURATION
# ===================================================================
# Application name
NEXT_PUBLIC_APP_NAME=Synthos
# Application version (auto-populated from package.json)
# NEXT_PUBLIC_APP_VERSION=1.0.0
# ===================================================================
# API CONFIGURATION
# ===================================================================
# Backend API URL - REQUIRED
# Development: http://localhost:8000
# Production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:8000
# WebSocket URL for real-time features
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
# ===================================================================
# ENVIRONMENT SETTINGS
# ===================================================================
# Node environment (development, production, test)
NODE_ENV=development
# ===================================================================
# STRIPE CONFIGURATION (Client-side)
# ===================================================================
# Stripe publishable key (safe to expose to browser)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key
# ===================================================================
# MONITORING & ANALYTICS
# ===================================================================
# ===================================================================
# FEATURE FLAGS
# ===================================================================
# Enable analytics tracking (true/false)
NEXT_PUBLIC_ENABLE_ANALYTICS=true
# Enable error reporting (true/false)
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
# Enable debug mode in browser (true/false)
NEXT_PUBLIC_DEBUG=true
# Enable beta features (true/false)
NEXT_PUBLIC_ENABLE_BETA_FEATURES=true
# Development server port
PORT=3001
# Enable hot reloading (true/false)
FAST_REFRESH=true
# ===================================================================
# OPTIONAL INTEGRATIONS
# ===================================================================
# Intercom app ID for customer support (optional)
# NEXT_PUBLIC_INTERCOM_APP_ID=your-intercom-app-id
# PostHog API key for product analytics (optional)
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# Crisp website ID for live chat (optional)
# NEXT_PUBLIC_CRISP_WEBSITE_ID=your-crisp-website-id
# Mixpanel token for analytics (optional)
# NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token
# ===================================================================
# SECURITY CONFIGURATION
# ===================================================================
# Content Security Policy (CSP) mode
CSP_MODE=report-only
# Enable security headers (true/false)
ENABLE_SECURITY_HEADERS=true
# ===================================================================
# PERFORMANCE CONFIGURATION
# ===================================================================
# Enable service worker (true/false)
NEXT_PUBLIC_ENABLE_SW=false
# Enable offline support (true/false)
NEXT_PUBLIC_ENABLE_OFFLINE=true
# Enable PWA features (true/false)
NEXT_PUBLIC_ENABLE_PWA=true 